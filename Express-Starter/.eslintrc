{
  "plugins": ["prettier"],
  "env": {
    "node": true,
    "commonjs": true,
    "es6": true,
    "jest": true
  },
  "globals": {},
  "extends": ["airbnb-base", "prettier"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "babel-plugin-root-import": {
        "rootPathPrefix": "~",
        "rootPathSuffix": "src"
      }
    }
  },
  "rules": {
    "import/prefer-default-export": "off",
    "prettier/prettier": "error",
    "no-underscore-dangle": "off"
  }
}
